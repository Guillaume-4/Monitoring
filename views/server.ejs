<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../styles/server.css">
    <script src="../script/Process.js" defer></script>
    <title>Document</title>
</head>
<body>
    <header>
        <%- include("components/header") %>
    </header>

    <div class="CenterDiv">
        <div class="sidebar">
            <div class="Container">
                <% server.forEach(element => { %>
                    <div class="ServerPanel">
                        <h1 class="ServerTitle"><%= element.ProcessName  %></h1>
                        <h3 class="ServerStatus"><%= (element.IsOnline === false ?  "Status : Offline ðŸ”´" : "Status : Online ðŸŸ¢" ) %></h3> <br>
                        <button class="Start Button" <%= element.IsOnline ? 'hidden' : '' %> onclick="startProcess('<%= process.command %>')">
                            Start
                        </button>
                        <button class="Stop Button" <%= !element.IsOnline ? 'hidden' : '' %> onclick="stopProcess(<%= process.pid %>)">
                            Stop
                        </button>
                        <button class="Restart Button" <%= !element.IsOnline ? 'hidden' : '' %> onclick="restartProcess(<%= process.pid %>, '<%= process.command %>')">
                            Restart
                        </button>
                    </div> 
                  <% }); %>
            </div>
        </div>
    </div>
</body>
</html>